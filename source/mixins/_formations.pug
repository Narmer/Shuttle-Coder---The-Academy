mixin formation(coursetitle, description, places, hours, imagecourse, pathcourse, link)
	.col-xs-12.col-sm-6.col-md-6.col-lg-4
		.course-single-item.bg-white.border-1px.clearfix.mb-md-40
			.course-thumb
				a(href=link)
					img(class="img-fullwidth" alt="" src=pathcourse+imagecourse)
			.course-details.clearfix.p-20.pt-15
				.course-top-part
					a(href=link)
						h4.mt-5.mb-5= coursetitle
				p.course-description.mt-15.mb-0= description
			.course-meta
				ul.list-inline
					li
						i.lnr.lnr-users.font-20
						strong= places+" Places"
					li
						i.lnr.lnr-users.font-20
						strong= hours+" Heures"

