mixin favicons(path)
	link(rel="apple-touch-icon" sizes="57x57" href=path+"images/favicons/apple-icon-57x57.png")
	link(rel="apple-touch-icon" sizes="60x60" href=path+"images/favicons/apple-icon-60x60.png")
	link(rel="apple-touch-icon" sizes="76x76" href=path+"images/favicons/apple-icon-76x76.png")
	link(rel="apple-touch-icon" sizes="114x114" href=path+"images/favicons/apple-icon-114x114.png")
	link(rel="apple-touch-icon" sizes="120x120" href=path+"images/favicons/apple-icon-120x120.png")
	link(rel="apple-touch-icon" sizes="152x152" href=path+"images/favicons/apple-icon-152x152.png")
	link(rel="icon" type="image/png" sizes="32x32" href=path+"images/favicons/favicon-32x32.png")
	link(rel="icon" type="image/png" sizes="96x96" href=path+"images/favicons/favicon-96x96.png")
	link(rel="icon" type="image/png" sizes="16x16" href=path+"images/favicons/favicon-16x16.png")
	link(rel="manifest" href=path+"images/favicons/manifest.json")
