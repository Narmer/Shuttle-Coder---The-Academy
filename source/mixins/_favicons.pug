mixin favicons(path)
	link(href=path+"images/favicon.png" rel="shortcut icon" type="image/png")
	link(href=path+"images/apple-touch-icon.png" rel="apple-touch-icon")
	link(href=path+"images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
	link(href=path+"images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")
	link(href=path+"images/apple-touch-icon-144x144.png" rel="apple-touch-icon" sizes="144x144")
