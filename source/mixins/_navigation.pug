mixin navigation(path)
	nav(id="menuzord" class="menuzord default no-bg")
		ul(class="menuzord-menu sm-padding")
			li
				a(href=path+"index.html") Accueil
			li
				a(href=path+"methode.html") La m√©thode
			li
				+megamenu(path)
			li
				a(href=path+"faq.html") FAQ

				//-li
					a(href="#") Features
						span(class="label label-danger") New


			a(class="menuzord-brand switchable-logo pull-left flip mb-15" href=path+"")
