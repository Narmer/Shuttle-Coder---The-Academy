extends ./_layout.pug

include mixins/_formations.pug

append meta
	meta(name="description" content="")
	meta(name="keywords" content="")

block title
	title Shuttle Coder - Nos formations

prepend favicons
	- var path = './'

prepend css
	- var path = './'


prepend head-scripts
	- var path = './'

prepend hero
	- var title = 'Nos formations'
	- var image = 'cover.jpg'
	- var path = './images/bgs/'

prepend maincontent
	- var path_courses = "./images/courses/"

block maincontent
	section(id="courses" class="bg-silver-light")
		.container
			.section-title.mb-40
				.row
					.col-md-12
						h2(class="title text-uppercase mb-5") Coding #[span.text-theme-colored2 Bootcamps]
							h5.font-16.mt-5 Nos formations intensives en présentiel
			.section-content
				.row
					+formation("Développeur d'application iOS/Swift", "Le bootcamp pour acquérir les bases du développement iOS en Swift et lancer votre projet.", '16', '360', 'ios-swift.jpg', "./images/courses/", '/bootcamps/developpeur-ios-swift.html', '')
	section(id="workshops" class="bg-silver-light")
		.container
			.section-title.mb-40
				.row
					.col-md-12
						h2(class="title text-uppercase mb-5") Ateliers #[span.text-theme-colored2 Workshops]
							h5.font-16.mt-5 Nos ateliers pour se perfectionner
			.section-content
				.row
					+workshop("L'importance de tester son code", "Apprenez à tirer avantages des tests de logiciels et les termes pour les expliquer.", "10", "3", "tdd.jpg", "./images/courses/", "/workshops/pourquoi-tester-son-code.html", "")
	section(id="ondemand" class="bg-silver-light")
		.container
			.section-title.mb-40
				.row
					.col-md-12
						h2(class="title text-uppercase mb-5") On #[span.text-theme-colored2 Demand]
							h5.font-16.mt-5 Les formations et tutos en ligne pour se former à son rythme
			.section-content
				.row
					+ondemand("Apprendre la programmation avec Swift", "Cours d'introduction à la programmation avec le langage moderne et puissant d'Apple, Swift.", "swift-101.jpg", "./images/courses/", "https://ondemand.shuttlecoder.academy/p/apprendre-la-programmation-avec-swift", '')

prepend footer
	- var path = './'
