doctype

include mixins/_favicons.pug
include mixins/_css.pug
include mixins/_head-scripts.pug
include mixins/_navigation.pug
include mixins/_hero-alt.pug
include mixins/_pre-footer.pug
include mixins/_footer.pug

html(dir="ltr" lang="fr")
	head
		block meta
			include ./includes/_metas.pug

		block title
			title Pas de titre

		block favicons
			+favicons(path)

		block css
			+css(path)

		block head-scripts
			+head-scripts(path)

		block old-scripts
			//- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
			//- WARNING: Respond.js doesn't work if you view the page via file://
			<!--[if lt IE 9]>
				script(src=path+"https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
				script(src=path+"https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
			<![endif]-->

	body(class="has-side-panel side-panel-right fullwidth-page")
		#wrapper.clearfix

			block header
				header(id="header" class="header header-floating")
					.header-nav.navbar-sticky.navbar-sticky-animated
						.header-nav-wrapper
							.container
								+navigation(path)

			block content
				.main-content
					block hero
						+hero-alt(title, subtitle, image, path)
					block maincontent

			block footer
				footer#footer.footer(data-bg-color="#20232E")
					block prefooter
						+prefooter(path)
					block footer-bottom
						+footer(path)
					<a class="scrollToTop" href="#"><i class="fas fa-angle-up fa-2x" data-fa-transform="down-5"></i></a>

		block scripts
			script(src=path+"js/custom.js")
